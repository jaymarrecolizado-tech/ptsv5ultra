# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
PROJECT_NAME=ATLAS
VERSION=1.0.0
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings
DATABASE_URL=mysql+aiomysql://tracker_user:tracker_password@mysql:3306/project_tracker
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Settings
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Email Settings (Optional - for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
EMAILS_FROM_EMAIL=noreply@projecttracker.local
EMAILS_FROM_NAME=Project Tracker

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# WebSocket
WS_MESSAGE_QUEUE_SIZE=100
